

class Solution {
 public:
  bool checkString(string s) {
    return s.find("ba") == string::npos;
  }
};



class Solution {
public:
    bool checkString(string s) {
        for (int i = 1; i < s.size(); i++) {
            // Compare characters using single quotes for char literals
            if (s[i] == 'a' && s[i - 1] == 'b') return false;
        }
        return true; 
    }
};


